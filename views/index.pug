extends layout
block content
	include nav_login	
		h2(id="container") Iniciar Sesion
			p #{msj}
		div(id="container")
			form(method="post" action="admin")
				div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
					label(class="mdl-textfield__label" for="usuario") Usuario	
					input(class="mdl-textfield__input" id="usuario"  name="usuario" type='text'  title="Usuario Requerido" required )
				br
				div(class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label")
					label(class="mdl-textfield__label" for="contrasena" ) Contrasena
					input(class="mdl-textfield__input" id="contrasena" name='contrasena' type="password"  title="Contrasena Requerida" required)
				br
				input(id="btn_entrar" type='submit' value="Entrar" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent")